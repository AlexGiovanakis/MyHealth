<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Weight Factor Section -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            android:backgroundTint="#F8F9FA">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="12dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/edit"
                        android:layout_marginEnd="8dp"
                        android:contentDescription="Weight Factor Icon" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Παράγοντας Βαρύτητας"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#2C3E50" />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Minimum threshold για εμφάνιση αποτελεσμάτων"
                    android:textSize="12sp"
                    android:textColor="#7F8C8D"
                    android:layout_marginBottom="12dp" />

                <Spinner
                    android:id="@+id/spinnerWeightFactor"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginBottom="8dp" />

                <EditText
                    android:id="@+id/etCustomWeightFactor"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:hint="Εισάγετε ποσοστό (1-100)"
                    android:inputType="number"
                    android:visibility="gone"
                    android:padding="12dp"
                    android:textSize="14sp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Match Thresholds Section -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            android:backgroundTint="#F0F8FF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="12dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/edit"
                        android:layout_marginEnd="8dp"
                        android:contentDescription="Thresholds Icon" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Όρια Κατηγοριοποίησης"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#2C3E50" />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ορισμός ορίων για Υψηλή/Μέτρια/Χαμηλή αντιστοίχιση"
                    android:textSize="12sp"
                    android:textColor="#7F8C8D"
                    android:layout_marginBottom="16dp" />

                <!-- High Threshold -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    app:boxBackgroundMode="outline"
                    app:boxCornerRadiusTopStart="8dp"
                    app:boxCornerRadiusTopEnd="8dp"
                    app:boxCornerRadiusBottomStart="8dp"
                    app:boxCornerRadiusBottomEnd="8dp"
                    app:boxStrokeColor="#3498DB"
                    app:hintTextColor="#3498DB">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etHighThreshold"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Υψηλή Αντιστοίχιση (%)"
                        android:inputType="number"
                        android:textSize="14sp" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Moderate Threshold -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    app:boxBackgroundMode="outline"
                    app:boxCornerRadiusTopStart="8dp"
                    app:boxCornerRadiusTopEnd="8dp"
                    app:boxCornerRadiusBottomStart="8dp"
                    app:boxCornerRadiusBottomEnd="8dp"
                    app:boxStrokeColor="#3498DB"
                    app:hintTextColor="#3498DB">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etModerateThreshold"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Μέτρια Αντιστοίχιση (%)"
                        android:inputType="number"
                        android:textSize="14sp" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Low Threshold Info -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:background="#E3F2FD"
                    android:padding="12dp">

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/edit"
                        android:layout_marginEnd="8dp"
                        android:contentDescription="Info Icon" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="Χαμηλή Αντιστοίχιση: Από Παράγοντα Βαρύτητας έως Μέτρια"
                        android:textSize="12sp"
                        android:textColor="#5DADE2"
                        android:fontFamily="sans-serif-medium" />
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Live Preview Section -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="8dp"
            app:cardElevation="2dp"
            android:backgroundTint="#E8F5E8">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Προεπισκόπηση Ορίων:"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="#27AE60"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:id="@+id/tvLivePreview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Χαμηλή: 15%-39%, Μέτρια: 40%-69%, Υψηλή: 70%+"
                    android:textSize="11sp"
                    android:textColor="#2E7D32"
                    android:fontFamily="monospace" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>